<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <springProperty scope="context" name="serviceName" source="spring.application.name" defaultValue="api-gateway"/>
    
    <!-- Console appender with JSON formatting -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"${serviceName}","component":"gateway","layer":"edge"}</customFields>
            <!-- Include OpenTelemetry trace context -->
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
            <!-- Include business context -->
            <includeMdcKeyName>correlationId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>userRoles</includeMdcKeyName>
            <!-- Timestamp format -->
            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</timestampPattern>
            <timeZone>UTC</timeZone>
        </encoder>
    </appender>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
    
    <!-- Application-specific loggers -->
    <logger name="com.orderplatform" level="DEBUG"/>
    <logger name="org.springframework.cloud.gateway" level="INFO"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="reactor.netty" level="INFO"/>
    
    <!-- Profile-specific configuration -->
    <springProfile name="dev,local">
        <logger name="com.orderplatform" level="DEBUG"/>
        <logger name="org.springframework.cloud.gateway" level="DEBUG"/>
    </springProfile>
    
    <springProfile name="prod">
        <logger name="com.orderplatform" level="INFO"/>
        <logger name="org.springframework.cloud.gateway" level="WARN"/>
    </springProfile>
</configuration>
